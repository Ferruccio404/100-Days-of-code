#include<iostream>
using namespace std;
class stack{
	public:
		int *arr;
		int size;
		int top;
stack(int a){
	size=a;
	arr=new int(a);
	top=-1;
}
void push(int b){
	if(size-top>1){
		top++;
		arr[top]=b;
	}
	else{
		cout<<"Stack Overflow"<<endl;
	}
}
void pop(){
	if(top>=0){
		int temp;
		temp=arr[top];
		top--;
		cout<<temp<<" Was poped from the stack"<<endl;
	}
	else{
		cout<<"stack underflow"<<endl;
	}
}
void print(){
	cout<<"elements of the stack are as follows";
	for(int i=0;i<size;i++){
		cout<<arr[i]<<endl;
	}
}
};
int main(){
	char inpt;
	do{
	do{
		cout<<"Welcome"<<endl;
		int a;
		cout<<"Please enter the size of stack ";
		cin>>a;
		stack s1(a);
		do{
			cout<<"Stack operations"<<endl;
			cout<<"1. Push"<<endl;
			cout<<"2.pop"<<endl;
			cout<<"3.print"<<endl;
			int opt;
			cout<<"Please select any one of the above ";
			cin>>opt;
			if(opt==1){
				cout<<"Enter the number of elements to be pushed ";
				cin>>opt;
				for(int i=1;i<opt+1;i++){
					int tempo;
					cout<<"Please enter the "<<i<<" element of stack ";
					cin>>tempo;
					s1.push(tempo);
		}}
		else if(opt==2){
		s1.pop();
		}
		else if(opt==3){
			s1.print();
		}
		else{
			cout<<"Please enter a valid choice";
		}
		cout<<"Do you want to contine stack operations(c), Want to create new stack(n), or exit this program(e) ";
		cin>>inpt;
	}while(inpt=='c');}while(inpt=='n');}while(inpt!='e');}